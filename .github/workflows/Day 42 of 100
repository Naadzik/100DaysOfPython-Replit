print("Create your own beast!")
print()
time.sleep(2)
os.system("clear")

for name in Mok√©Beast.keys():
  if name == "Type":
    print("Available types: air, fire, water, grass, poison, electric, ground and rock.")
  Mok√©Beast[name] = input(f"{name}: ").strip().title()
  time.sleep(2)
  os.system("clear")

print()
for name, value in Mok√©Beast.items():
  if Mok√©Beast["Type"] == "Air":
    print("\033[1;37m", end='')
  elif Mok√©Beast["Type"] == "Fire":
    print("\033[0;31m", end='')
  elif Mok√©Beast["Type"] == "Water":
    print("\033[0;34m", end='')
  elif Mok√©Beast["Type"] == "Grass":
    print("\033[0;32m", end='')
  elif Mok√©Beast["Type"] == "Poison":
    print("\033[0;35m", end='')
  elif Mok√©Beast["Type"] == "Electric":
    print("\033[1;33m", end='')
  elif Mok√©Beast["Type"] == "Ground":
    print("\033[0;33m", end='')
  elif Mok√©Beast["Type"] == "Rock":
    print("\033[0;30m", end='')
  print(f"{name}: {value}")
